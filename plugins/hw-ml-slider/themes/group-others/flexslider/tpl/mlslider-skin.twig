<div class="slider-wrapper theme-default">
    <div id="flex-slider-{{ slider_id }}" class="flexSlider" >
        {% if query is defined %}
        {% for post in posts %}
        <a href="{{ post.get_field('hw-ml-slider_url')|default('#') }}"><img src="{{ post.thumbnail.src }}" alt="{{ post.excerpt }}" data-thumb="" data-transition="" alt="" title="{{ post.excerpt }}"  /></a>
        {% endfor %}#}
        {% endif %}
    </div>
</div>
<script type="text/javascript">
    jQuery(window).load(function () {
        jQuery('#nivo-slider-{{ slider_id }}').nivoSlider({{ options }});
    });
</script>